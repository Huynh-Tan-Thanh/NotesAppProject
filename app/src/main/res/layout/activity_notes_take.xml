<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NotesTakeActivity"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/navLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/savebtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/turned_in"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/titleEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Title"
        android:textColorHint="#BFBABA"
        android:textSize="24sp"
        android:singleLine="true"
        android:padding="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:id="@+id/noteEdt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|start"
            android:hint="Write your note here"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textSize="16sp"

            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnAddPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add_photo"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="Camera Button"/>

        <ImageView
            android:id="@+id/btnMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="Mic Button"/>

        <ImageView
            android:id="@+id/btnRemider"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/remider"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="Gallery Button"/>
    </LinearLayout>

</LinearLayout>
